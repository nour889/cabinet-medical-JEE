<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
		 version="4.0">

	<display-name>Cabinet MÃ©dical</display-name>

	<!-- ================== WELCOME ================== -->
	<welcome-file-list>
		<welcome-file>jsp/login.jsp</welcome-file>
	</welcome-file-list>

	<!-- ================== SESSION ================== -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

	<!-- ================== DB CONFIG ================== -->
	<context-param>
		<param-name>jdbc.url</param-name>
		<param-value>
			jdbc:mysql://localhost:3306/cabinet-medical?useSSL=false&amp;serverTimezone=UTC
		</param-value>
	</context-param>

	<context-param>
		<param-name>jdbc.utilisateur</param-name>
		<param-value>root</param-value>
	</context-param>

	<context-param>
		<param-name>jdbc.motdepasse</param-name>
		<param-value>password</param-value>
	</context-param>

	<!-- ================== FILTERS ================== -->

	<!-- AuthFilter -->
	<filter>
		<filter-name>AuthFilter</filter-name>
		<filter-class>org.projet.cabinet.filter.AuthFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>AuthFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<!-- RoleFilter -->
	<filter>
		<filter-name>RoleFilter</filter-name>
		<filter-class>org.projet.cabinet.filter.RoleFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>RoleFilter</filter-name>
		<url-pattern>/patient/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>RoleFilter</filter-name>
		<url-pattern>/secretaire/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>RoleFilter</filter-name>
		<url-pattern>/medecin/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>RoleFilter</filter-name>
		<url-pattern>/admin/*</url-pattern>
	</filter-mapping>

	<!-- ================== SERVLETS ================== -->

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>org.projet.cabinet.servlet.LoginServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>InscriptionServlet</servlet-name>
		<servlet-class>org.projet.cabinet.servlet.InscriptionServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>PatientServlet</servlet-name>
		<servlet-class>org.projet.cabinet.servlet.PatientServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>SecretaireServlet</servlet-name>
		<servlet-class>org.projet.cabinet.servlet.SecretaireServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>MedecinServlet</servlet-name>
		<servlet-class>org.projet.cabinet.servlet.MedecinServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>AdminServlet</servlet-name>
		<servlet-class>org.projet.cabinet.servlet.AdminServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>org.projet.cabinet.servlet.LogoutServlet</servlet-class>
	</servlet>

	<!-- ================== MAPPINGS ================== -->

	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>InscriptionServlet</servlet-name>
		<url-pattern>/inscription</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>PatientServlet</servlet-name>
		<url-pattern>/patient/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>SecretaireServlet</servlet-name>
		<url-pattern>/secretaire/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>MedecinServlet</servlet-name>
		<url-pattern>/medecin/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>AdminServlet</servlet-name>
		<url-pattern>/admin/*</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

</web-app>
